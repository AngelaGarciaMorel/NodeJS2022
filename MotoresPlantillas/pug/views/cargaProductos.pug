html 
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        title="Carga de Productos con Pug"
    body 
        .container(style='background-color: #F5F5F5;')
            h2 Carga de productos
            form#redirectForm(action='/productos' method='POST')
                | nombre: 
                input.form-control(type='text' name='title')
                |precio: 
                input.form-control(type='text' name='price')
                |foto URL: 
                input.form-control(type='text' name='thumbnail')
                br
                button.btn.btn-primary Enviar
            hr
            br
            a(href='/productos')
                button.btn.btn-secondary Ver Lista de Productos
