doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
        title Lista de Productos con Pug
    body 
        .container(style='background-color: #F5F5F5;')
            h2 Listas de Productos
            if tieneDatos
                table.table.table-dark.table-striped
                    thead
                    tr
                        th(scope='col') Nombre
                        th(scope='col') Precio
                        th(scope='col') Foto
                    tbody
                    each prod in productos
                        tr
                            td= prod.title
                            td= prod.price 
                            td
                                img(src=prod.thumbnail style='height: 50px; width:50px')

            else
                h3.bg-warning No se encontraron productos

            br
            a(href='/')
                button.btn.btn-success Cargar Productos
            br
            br
